{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "ES2015.iterable", "ES6", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  },
  "include": [
    "src/**/*.ts"
  ]
}